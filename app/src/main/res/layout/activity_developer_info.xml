<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DeveloperInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:elevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/developerImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_github_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:text="Dheeraj Kotwani"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alata_regular"
                    android:textStyle="bold"
                    android:textColor="@color/grey_800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:text="Developer"
                    android:textSize="20dp"
                    android:fontFamily="@font/alata_regular"
                    android:textColor="@color/grey_800"/>

                <LinearLayout
                    android:id="@+id/llGithubDheeraj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_github_logo"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:text="dheerajkotwani"
                        android:textSize="18dp"
                        android:fontFamily="@font/alata_regular"
                        android:textColor="@color/grey_800"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">


                    <LinearLayout
                        android:id="@+id/llFollowersDheeraj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tvFollowersDheeraj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black_90"
                            android:text="0"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/grey_700"
                            android:text="Followers"
                            android:includeFontPadding="false"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFollowingDheeraj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tvFollowingDheeraj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black_90"
                            android:text="0"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/grey_700"
                            android:text="Following"
                            android:includeFontPadding="false"
                            android:textAlignment="center"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRepoDheeraj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tvRepositoriesDheeraj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black_90"
                            android:text="0"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/grey_700"
                            android:text="Repositories"
                            android:includeFontPadding="false"
                            android:textAlignment="center"/>

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:orientation="horizontal"
                            android:background="@drawable/status_back">

                            <TextView
                                android:id="@+id/followDheeraj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="Follow"
                                android:layout_margin="2dp"
                                android:textSize="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/grey_800"/>
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal"
                        android:background="@drawable/status_back">

                        <TextView
                            android:id="@+id/starGithubVisualiser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Star"
                            android:layout_margin="2dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/grey_800"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>